<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/context
      http://www.springframework.org/schema/context/spring-context-3.0.xsd">
      
      <bean id="question" class="com.codebind.Question">
		<constructor-arg value="1"></constructor-arg>
		<constructor-arg value="How are you?"></constructor-arg>
		<constructor-arg>
			<map>
				<entry key="1" value="I am fine"></entry>
				<entry key="2" value="how are you?"></entry>
			</map>
		</constructor-arg>
		</bean>
     
     <bean id="bankaccount" class="com.codebind.BankAccount">
		<property name="AccountId" value="123456"></property>
		<property name="AccHolderName" value="venkatesh"> </property>
		<property name="AccountType" value="savings"></property>
		<property name="balance" value="1000"></property>
	</bean>
     
     <bean id="address1" class="com.codebind.Address">
		<!-- using the setter Injection <property name="Street" value="kondapally"></property> 
			<property name="city" value="gadwal"></property> <property name="state" value="telangana"></property> 
			<property name="country" value="india"></property> <property name="pincode" 
			value="509125"></property> -->

		<!-- using the constructor injection -->
		<constructor-arg value="kondapally"></constructor-arg>
		<constructor-arg value="gadwal"></constructor-arg>
		<constructor-arg value="telangana"></constructor-arg>
		<constructor-arg value="india"></constructor-arg>
		<constructor-arg value="509125" type="int"></constructor-arg>
	</bean>
	
	
	<bean id="test" class="com.codebind.Customer">
		<!-- using the setter injection <property name="customerId" value="12345"></property> 
			<property name="customerName"value="venkatesh"></property> <property name="contact" 
			value="7780796045"></property> <property name="address" ref="address1"></property> -->
		<!-- using the constructor injection -->
		<constructor-arg value="12345" type="int"></constructor-arg>
		<constructor-arg value="venkatesh"></constructor-arg>
		<constructor-arg value="7780796045" type="Long"></constructor-arg>
		<constructor-arg ref="address1"></constructor-arg>

	</bean>
		<context:component-scan
		base-package="com.codebind"></context:component-scan>
     
</beans>
